<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/frag_sw_container_padding"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_otto_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/button_sw_submit_text" />
        <Button
            android:id="@+id/bt_otto_dead_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/otto_dead_event_button_label" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_otto_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>